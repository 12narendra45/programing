<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="90dp"
            android:inputType="none"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/result_data"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="right|top"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:onClick="onClickNumber"
                android:text="c"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="55sp"
                android:background="@drawable/round_bot"/>
            <Button
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickOperator"
                android:text="%"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55sp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:onClick="onClickOperator"
                android:text="/"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="50sp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/butdelete"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:text="x"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="55sp"
                android:background="@drawable/delete_but"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/but7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="onClickNumber"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="55dp"
                android:background="@drawable/round_bot"/>
            <Button
                android:id="@+id/but8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="8"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/but9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="9"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickOperator"
                android:text="*"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/but4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="onClickNumber"
                android:text="4"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"/>
            <Button
                android:id="@+id/but5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="5"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/but6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="6"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickOperator"
                android:text="-"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="onClickNumber"
                android:text="1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"/>
            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="2"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/but3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="3"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickOperator"
                android:text="+"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <Button
                android:id="@+id/but00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="onClickNumber"
                android:text="00"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"/>
            <Button
                android:id="@+id/but0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickNumber"
                android:text="0"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="onClickOperator"
                android:text="."
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55dp"
                android:background="@drawable/round_bot"
                />
            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:onClick="Equalresult"
                android:text="="
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="55sp"
                android:background="@drawable/equal_but"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
